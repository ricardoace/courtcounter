<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.student.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/teamRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="36sp"
                android:gravity="center"
                android:hint="Team Bye"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:background="#C62828"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="26sp"
                android:text="Score:"
                android:gravity="center"
                android:background="#424242"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#F71989"
                android:textColor="#FFFFFF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1 Point"
                android:onClick="click1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1 Point"
                android:onClick="click2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/teamBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="36sp"
                android:gravity="center"
                android:hint="Team Hi"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:background="#6789C0"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="26sp"
                android:text="Score:"
                android:gravity="center"
                android:background="#F5F5F5"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/goals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="50sp"
                android:gravity="center"
                android:background="#81C784"
                android:textColor="#FFFFFF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1 Point"
                android:onClick="touch1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1 Point"
                android:onClick="touch2" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:onClick="reset"
        />
</LinearLayout>